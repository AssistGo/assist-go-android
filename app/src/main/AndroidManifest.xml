<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.assistgoandroid">

    <!--Camera permissions-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--Save images or videos to your phone-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--Network Permissions-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--Contact list Retrieval Permissions-->
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AssistGoAndroid">

        <activity android:name=".SplashScreen"
            android:theme="@style/SplashScreenWindow"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>

        <activity android:name=".translateActivity"></activity>
        <activity android:name=".callActivity"></activity>
        <activity android:name=".contactActivity"></activity>
        <activity android:name=".messageActivity"></activity>
        <activity android:name=".emergencyActivity"></activity>
        <activity android:name=".settingsActivity"></activity>

        <activity android:name=".Contact.contactCardActivity"></activity>
        <activity android:name=".Contact.newContactCardActivity"></activity>
        <activity android:name=".Contact.editContactCardActivity"></activity>
        <activity android:name=".Contact.newContactQRCodeActivity"></activity>

        <activity android:name=".profileActivity"></activity>


    </application>

</manifest>